<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_view"
    app:startDestination="@id/splash_screen_fragment">
    <fragment
        android:id="@+id/splash_screen_fragment"
        android:name="com.webtechsolution.ghumantey.ui.splash.SplashScreenFragment"
        tools:layout="@layout/splash_screen_fragment">
        <action
            android:id="@+id/action_splash_screen_fragment_to_sign_in_fragment"
            app:destination="@id/sign_in_fragment" />
        <action
            android:id="@+id/action_splash_screen_fragment_to_sign_up_fragment"
            app:destination="@id/sign_up_fragment" />
    </fragment>

    <fragment
        android:id="@+id/sign_in_fragment"
        android:name="com.webtechsolution.ghumantey.ui.signIn.SignInFragment"
        tools:layout="@layout/sign_in_fragment">
        <action
            android:id="@+id/action_sign_in_fragment_to_home_screen_fragment"
            app:destination="@id/home_screen_fragment" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.webtechsolution.ghumantey.ui.signUp.SignUpFragment"
        tools:layout="@layout/sign_up_fragment" />

    <fragment
        android:id="@+id/home_screen_fragment"
        android:name="com.webtechsolution.ghumantey.ui.home.HomeScreenFragment"
        tools:layout="@layout/home_screen_fragment">
        <action
            android:id="@+id/action_home_screen_fragment_to_destination_fragment"
            app:destination="@id/destination_fragment" />
        <action
            android:id="@+id/action_home_screen_fragment_to_my_profile_fragment"
            app:destination="@id/my_profile_fragment" />
    </fragment>

    <fragment
        android:id="@+id/destination_fragment"
        android:name="com.webtechsolution.ghumantey.ui.destination.DestinationFragment"
        tools:layout="@layout/destination_fragment" />

    <fragment
        android:id="@+id/my_profile_fragment"
        android:name="com.webtechsolution.ghumantey.ui.myProfile.MyProfileFragment"
        tools:layout="@layout/my_profile_fragment" >
        <action
            android:id="@+id/action_my_profile_fragment_to_profile_edit_fragment"
            app:destination="@id/profile_edit_fragment" />
    </fragment>

    <fragment
        android:id="@+id/profile_edit_fragment"
        android:name="com.webtechsolution.ghumantey.ui.profileEdit.ProfileEditFragment"
        tools:layout="@layout/profile_edit_fragment" />

</navigation>